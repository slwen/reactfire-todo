{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "arrowFunctions": true,
    "classes": true,
    "spread": true,
    "defaultParams": true,
    "blockBindings": true,
    "superInFunctions": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    semi: [2, "never"],
    "no-unused-expressions": 0,
    "indent": [2, 2],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "object-shorthand": [1, "properties"],
    "object-curly-spacing": [1, "always", {
      "objectsInObjects": false,
      "arraysInObjects": true
    }],
    "jsx-quotes": 1,
    "react/display-name": 1,
    "react/jsx-curly-spacing": [2, "always"],
    "react/jsx-no-duplicate-props": 1,
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/no-unknown-property": 1,
    "react/prop-types": 1,
    "react/react-in-jsx-scope": 1,
    "react/sort-comp": [1, {
      "order": [
        "lifecycle",
        "everything-else",
        "rendering"
      ]
    }]
  },
  "globals": {
    "describe": 1,
    "context": 1,
    "before": 1,
    "beforeEach": 1,
    "after": 1,
    "it": 1,
    "React": 1,
    "chai": 1,
    "should": 1,
    "expect": 1,
    "AssertionError": 1,
    "sinon": 1,
    "TestUtils": 1,
    "Simulate": 1,
    "renderIntoDocument": 1,
    "scryByType": 1,
    "findByType": 1,
    "scryByClass": 1,
    "findByClass": 1,
    "scryByTag": 1,
    "findByTag": 1
  }
}
